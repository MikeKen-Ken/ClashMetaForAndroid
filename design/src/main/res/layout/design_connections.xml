<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="self"
            type="com.github.kr328.clash.design.ConnectionsDesign" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@{self.surface.insets.start}"
        android:paddingEnd="@{self.surface.insets.end}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.kr328.clash.design.view.ActivityBarLayout
                android:id="@+id/activity_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@{self.surface.insets.top}">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/item_tailing_margin">

                    <include
                        layout="@layout/common_activity_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/sort_order_view" />

                    <ImageView
                        android:id="@+id/sort_order_view"
                        android:layout_width="@dimen/item_tailing_component_size"
                        android:layout_height="@dimen/item_tailing_component_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/item_tailing_margin"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="@string/connections_sort_order"
                        android:focusable="true"
                        android:padding="@dimen/toolbar_image_action_padding"
                        android:src="@drawable/ic_baseline_swap_vert" />
                </RelativeLayout>
            </com.github.kr328.clash.design.view.ActivityBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/item_padding_vertical"
                android:paddingStart="@dimen/item_tailing_margin"
                android:paddingEnd="@dimen/item_tailing_margin"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/tab_active_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connections_active"
                    android:onClick="@{() -> self.onTabActiveClick()}" />

                <Button
                    android:id="@+id/tab_closed_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/connections_closed"
                    android:onClick="@{() -> self.onTabClosedClick()}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/closed_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/item_tailing_margin"
                android:paddingEnd="@dimen/item_tailing_margin"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="?attr/colorSurface">

                <Spinner
                    android:id="@+id/retention_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp" />

                <Button
                    android:id="@+id/merge_by_domain_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/connections_merge_by_domain"
                    android:onClick="@{() -> self.onMergeByDomainClick()}" />

                <Button
                    android:id="@+id/clear_closed_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/connections_clear_closed"
                    android:onClick="@{() -> self.onClearClosedClick()}" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@{self.surface.insets.bottom}" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
